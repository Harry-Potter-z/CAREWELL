<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/page5_background"
    android:weightSum="3">

    <Button
        android:id="@+id/buttonback"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:background="@drawable/left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/imagebook"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/book"
        android:layout_marginTop="360dp"
 />
    <Button
        android:id="@+id/botton1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/ceyicebutton"
        android:layout_alignBottom="@+id/imagebook"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="测试结果"
        android:id="@+id/text1"
        android:layout_marginLeft="23dp"
        android:textColor="@color/text_color"
        android:layout_alignBottom="@+id/imagebook"
        android:layout_toRightOf="@+id/buttonback"
        android:layout_toEndOf="@+id/buttonback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="75"
        android:id="@+id/hr"
        android:textSize="40dp"
        android:textColor="@color/text_color"
        android:layout_marginBottom="90dp"
        android:layout_above="@+id/botton1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>